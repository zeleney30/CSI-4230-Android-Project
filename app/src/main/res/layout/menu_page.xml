<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#151515">


    <ImageView
        android:id="@+id/Logo"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="425dp"
        android:layout_height="93dp"
        android:paddingBottom="10dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:text="Postgame"
        android:textColor="#DDDDDD"
        android:textSize="60dp"
        app:layout_constraintBottom_toTopOf="@+id/textWinLoss"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Logo" />

    <EditText
        android:id="@+id/textWinLoss"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="275dp"
        android:layout_marginBottom="390dp"
        android:backgroundTint="#d4af37"
        android:gravity="center"
        android:hint="W/L"
        android:textColorHint="#DDDDDD"
        android:textColor="#DDDDDD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/textGA"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="163dp"
        android:layout_marginBottom="404dp"
        android:backgroundTint="#d4af37"
        android:gravity="center"
        android:hint="GA"
        android:textColorHint="#DDDDDD"
        android:textColor="#DDDDDD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textWinLoss"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/textSavePercentage"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="422dp"
        android:backgroundTint="#d4af37"
        android:gravity="center"
        android:hint="Save %"
        android:textColorHint="#DDDDDD"
        android:textColor="#DDDDDD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textGA"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/buttonEnterGoal"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:backgroundTint="#d4af37"
        android:ems="10"
        android:gravity="center"
        android:text="Enter Goal"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textGA"
        app:layout_constraintVertical_bias="0.268" />

    <Button
        android:id="@+id/buttonFinished"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="#d4af37"
        android:text="Finished"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="@+id/buttonEnterGoal"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="@+id/buttonEnterGoal"
        app:layout_constraintTop_toBottomOf="@+id/buttonEnterGoal" />

    <Button
        android:id="@+id/buttonMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Menu"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:backgroundTint="#d4af37"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>